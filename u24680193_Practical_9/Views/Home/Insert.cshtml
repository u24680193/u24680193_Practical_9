
@{
    ViewBag.Title = "Insert";
}

<h2>Insert</h2>
@using (Html.BeginForm("DoInsert","Home",FormMethod.Post))
{
<label>Name</label><br />
@Html.TextBox("Name", null, new { @class = "form-control", @type = "text" });

<label>Club Name</label><br />
@Html.DropDownList("ClubName", new SelectList(new[] { "Hamilton", "Ricciardo", "Vettel", "Sainz" }), "Select Club", new { @class = "form-control" })

<label>Age</label><br />
@Html.TextBox("Age", null, new { @class = "form-control", @type = "text" })

<label>Membership Fee</label><br />
@Html.TextBox("MembershipFee", null, new { @class = "form-control", @type = "text" })
<button type="submit">Add</button>

}
