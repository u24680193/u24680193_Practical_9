@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>
@using (Html.BeginForm("DoUpdate", "Home", FormMethod.Post))
{
    <label>ID</label>
    <br />
    @Html.TextBox("id", null, new { @class = "form-control", @type = "number" });
    <label>Name</label>
    <br />
    @Html.TextBox("name", null, new { @class = "form-control", @type = "text" });
    <button type="submit">Save</button>
}
